  url = {https://doi.org/10.1175/JPO-D-25-0130.1},
  tags = {Observations},
  abstract = {We demonstrate that including a Stokes drift offset is necessary to close the sea surface height budget. This study reconciles satellite observations with theoretical predictions of ocean surface dynamics, showing that surface wave effects must be accounted for in precise sea level measurements and geostrophic current calculations.}
}

@article{srinivasan2025launching,
  author = {Srinivasan and others},
  title = {Launching into societal benefits from the Surface Water and Ocean Topography (SWOT) mission},
  journal = {Water Resources Research},
  year = {2025},
  pages = {e2024WR038436},
  doi = {10.1029/2024WR038436},
  url = {https://doi.org/10.1029/2024WR038436},
  tags = {SWOT},
  abstract = {This paper explores the broad societal applications and benefits of SWOT mission data for water resource management, flood forecasting, reservoir monitoring, and understanding Earth's water cycle. We demonstrate how SWOT observations can improve water management decisions and enhance climate resilience.}
}

@article{wang2025swot,
  author = {Wang, J. and Lucas, A. J. and Stalin, S. and Lankhorst, M. and Send, U. and Schofield, O. and others},
  title = {SWOT mission validation of sea surface height measurements at sub-100 km scales},
  journal = {Geophysical Research Letters},
  volume = {52},
  pages = {e2025GL114936},
  year = {2025},
  doi = {10.1029/2025GL114936},
  url = {https://doi.org/10.1029/2025GL114936},
  tags = {SWOT, Validation},
  abstract = {Using in situ observations from moorings, gliders, and surface platforms, this study validates SWOT's unprecedented capability to measure sea surface height at scales below 100 km. We demonstrate excellent agreement between SWOT and in-situ measurements, confirming the satellite's ability to resolve mesoscale and submesoscale ocean features critical for understanding ocean dynamics.}
}

@article{archer2025wide,
  author = {Matthew Archer and Jinbo Wang and Patrice Klein and Gerald Dibarboure and Lee-Lueng Fu},
  title = {Wide-swath satellite altimetry unveils global submesoscale ocean dynamics},
  journal = {Nature},
  volume = {640},
  pages = {691--696},
  year = {2025},
  doi = {10.1038/s41586-024-08368-3},
  url = {https://doi.org/10.1038/s41586-024-08368-3},
  tags = {SWOT, Submesoscale},
  abstract = {SWOT's wide-swath altimetry reveals the ubiquity and importance of submesoscale ocean features globally. This study demonstrates that submesoscale processes are far more energetic and widespread than previously thought, transforming our understanding of ocean energy cascades, mixing processes, and their role in climate and marine ecosystems.}
}

@article{wang2012mechanism,
  author = {Wang, J. and Spall, M.A. and Flierl, G.R. and Malanotte-Rizzoli, P.},
  title = {A new mechanism for the generation of quasi-zonal jets in the ocean},
  journal = {Geophysical Research Letters},
  volume = {39},
  number = {10},
  pages = {L10601},
  year = {2012},
  doi = {10.1029/2012GL051861},
  url = {https://doi.org/10.1029/2012GL051861},
  tags = {Ocean Currents, GFD, Satellite Altimetry},
  abstract = {We propose a new mechanism for the generation of quasi-zonal jets in the ocean through the interaction of eddies with large-scale flows. Using theoretical analysis and numerical simulations, we show how eddy-mean flow interactions can create alternating jets, providing insights into ocean circulation patterns observed from satellite altimetry in various ocean basins.}
}

@phdthesis{wang2011instabilities,
  author = {Wang, J.},
  title = {Instabilities of an eastern boundary current with and without large-scale flow influence},
  school = {Massachusetts Institute of Technology},
  year = {2011},
  url = {https://dspace.mit.edu/handle/1721.1/68989},
  tags = {Ocean Currents, GFD},
  abstract = {This thesis investigates the instabilities of eastern boundary currents using theoretical models and numerical simulations. We examine how large-scale flow influences affect current stability and eddy formation, with applications to understanding the California Current and other eastern boundary upwelling systems. Results show that radiating instabilities can transport energy away from the boundary through Rossby waves.}
}

@article{wang2013nonlinear,
  author = {Wang, J. and Spall, M.A. and Flierl, G.R. and Malanotte-Rizzoli, P.},
  title = {Nonlinear radiating instability of a barotropic eastern boundary current},
  journal = {Journal of Physical Oceanography},
  volume = {43},
  number = {7},
  pages = {1439--1452},
  year = {2013},
  doi = {10.1175/JPO-D-12-0174.1},
  url = {https://doi.org/10.1175/JPO-D-12-0174.1},
  tags = {Ocean Currents, GFD},
  abstract = {We examine the nonlinear radiating instability of eastern boundary currents, showing how energy propagates away from the boundary through Rossby wave radiation. This mechanism affects regional ocean dynamics and has implications for upwelling systems. The study combines linear stability analysis with fully nonlinear numerical simulations to characterize the evolution and equilibration of these instabilities.}
}

@article{wang2013reconstructing,
  author = {Wang, J. and Flierl, G.R. and LaCasce, J.H. and McClean, J.L. and Mahadevan, A.},
  title = {Reconstructing the ocean's interior from surface data},
  journal = {Journal of Physical Oceanography},
  volume = {43},
  number = {8},
  pages = {1611--1626},
  year = {2013},
  doi = {10.1175/JPO-D-12-095.1},
  url = {https://doi.org/10.1175/JPO-D-12-095.1},
  tags = {Data Assimilation, Satellite Altimetry},
  abstract = {This study develops methods to reconstruct three-dimensional ocean interior properties from surface measurements using quasi-geostrophic dynamics. We demonstrate the potential of satellite observations to infer subsurface ocean structure, including temperature, salinity, and velocity fields. The method is validated against high-resolution ocean model output and shows good skill at reconstructing subsurface features from surface sea level and temperature.}
}

@article{wang2014pathways,
  author = {Wang, J. and Mazloff, M.R. and Gille, S.T.},
  title = {Pathways of the Agulhas waters poleward of 29 S},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {119},
  number = {7},
  pages = {4234--4250},
  year = {2014},
  doi = {10.1029/2014JC009974},
  url = {https://doi.org/10.1029/2014JC009974},
  tags = {Southern Ocean},
  abstract = {Using Lagrangian particle tracking in a high-resolution Southern Ocean model, we investigate the pathways of Agulhas waters after they enter the Atlantic. We show that most Agulhas waters flow poleward and contribute to the Antarctic Circumpolar Current rather than directly feeding the Atlantic meridional overturning circulation. This has implications for understanding inter-ocean exchanges and climate.}
}

@article{liu2014retrieving,
  author = {Liu, L. and Peng, S. and Wang, J. and Huang, R.X.},
  title = {Retrieving density and velocity fields of the ocean's interior from surface data},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {119},
  number = {12},
  pages = {8512--8529},
  year = {2014},
  doi = {10.1002/2014JC010221},
  url = {https://doi.org/10.1002/2014JC010221},
  tags = {Reconstruction},
  abstract = {This paper extends surface quasi-geostrophic theory to retrieve three-dimensional density and velocity fields from sea surface height and temperature. We test the method with idealized configurations and ocean model outputs, demonstrating that subsurface information can be effectively recovered from surface observations in regions where quasi-geostrophic dynamics dominate.}
}

@article{wang2005statistic,
  author = {Wang, J. and Qian, W.},
  title = {Statistic analysis of tropical cyclone impact on the China mainland during the last half century},
  journal = {Chinese Journal of Geophysics},
  volume = {48},
  number = {5},
  pages = {1069--1077},
  year = {2005},
  doi = {10.1002/cjg2.751},
  url = {https://doi.org/10.1002/cjg2.751},
  tags = {Climate},
  abstract = {We conduct a statistical analysis of tropical cyclone impacts on mainland China over 50 years, examining trends in frequency, intensity, and landfall locations. Results show significant interannual and decadal variability related to large-scale climate patterns including ENSO and the Pacific Decadal Oscillation, with implications for disaster preparedness and risk assessment.}
}

@article{lacasce2015estimating,
  author = {LaCasce, J.H. and Wang, J.},
  title = {Estimating subsurface velocities from surface fields with idealized stratification},
  journal = {Journal of Physical Oceanography},
  volume = {45},
  number = {9},
  pages = {2424--2435},
  year = {2015},
  doi = {10.1175/JPO-D-14-0206.1},
  url = {https://doi.org/10.1175/JPO-D-14-0206.1},
  tags = {Reconstruction, Satellite Altimetry},
  abstract = {We develop a method to estimate subsurface velocities from surface fields using idealized stratification profiles. The approach combines surface quasi-geostrophic theory with realistic ocean stratification to improve subsurface reconstruction. Validation with numerical simulations shows the method performs well in energetic regions and can extend the utility of satellite altimetry for three-dimensional ocean monitoring.}
}

@article{wang2016effect,
  author = {Wang, J. and Mazloff, M.R. and Gille, S.T.},
  title = {The Effect of the Kerguelen Plateau on the Ocean Circulation},
  journal = {Journal of Physical Oceanography},
  volume = {46},
  number = {11},
  pages = {3385--3396},
  year = {2016},
  doi = {10.1175/JPO-D-16-0143.1},
  url = {https://doi.org/10.1175/JPO-D-16-0143.1},
  tags = {Southern Ocean, Climate},
  abstract = {We investigate how the Kerguelen Plateau affects Southern Ocean circulation and water mass transformations using a high-resolution ocean state estimate. The plateau steers the Antarctic Circumpolar Current, creates localized upwelling and downwelling, and enhances eddy activity. These effects have implications for nutrient supply, biological productivity, and the global overturning circulation.}
}

@inproceedings{tamsitt2017pathways,
  author = {Tamsitt, V. and Drake, H. and Morrison, A. and Talley, L. and Dufour, C. and Gray, A. and Griffies, S. and Mazloff, M. and Sarmiento, J. and Wang, J.},
  title = {Pathways of upwelling deep waters to the surface of the Southern Ocean},
  booktitle = {EGU General Assembly Conference Abstracts},
  pages = {10971},
  year = {2017},
  url = {https://ui.adsabs.harvard.edu/abs/2017EGUGA..1910971T},
  tags = {Southern Ocean, Ocean Currents},
  abstract = {Using Lagrangian particle tracking in climate models, we trace the pathways of deep waters as they upwell to the surface in the Southern Ocean. We find that upwelling occurs primarily in localized regions and that particles follow complex, spiraling paths influenced by eddies and wind-driven circulation. These pathways are critical for understanding carbon and heat uptake in the Southern Ocean.}
}

@article{wang2007relationship,
  author = {Wang, J. and Qian, W. and Zhang, X.},
  title = {Relationship between the tropical cyclone genesis over the Northwest Pacific and the sea surface temperature anomalies},
  journal = {Progress in Natural Science},
  volume = {17},
  number = {10},
  pages = {1254--1258},
  year = {2007},
  doi = {10.1080/10002007088537507},
  url = {https://doi.org/10.1080/10002007088537507},
  tags = {Climate},
  abstract = {This study examines the relationship between tropical cyclone genesis in the Northwest Pacific and sea surface temperature anomalies. We identify key regions where SST anomalies significantly influence cyclone formation and track, finding that warm anomalies in the western Pacific enhance genesis while eastern Pacific conditions modulate cyclone trajectories through their influence on large-scale atmospheric circulation.}
}

@article{wang2018observing,
  author = {Wang, J. and Fu, L. and Qiu, B. and Menemenlis, D. and Farrar, J.T. and Chao, Y. and Thompson, A.F. and Flexas, M.M.},
  title = {An observing system simulation experiment for the calibration and validation of the surface water ocean topography sea surface height measurement using in situ platforms},
  journal = {Journal of Atmospheric and Oceanic Technology},
  volume = {35},
  number = {2},
  pages = {281--297},
  year = {2018},
  doi = {10.1175/JTECH-D-17-0076.1},
  url = {https://doi.org/10.1175/JTECH-D-17-0076.1},
  tags = {SWOT, Mission Development},
  abstract = {This observing system simulation experiment evaluates strategies for calibrating and validating SWOT sea surface height measurements using in situ platforms including moorings, gliders, and surface drifters. We assess the required spatial and temporal sampling to adequately validate SWOT at wavelengths from 15-100 km, informing mission planning and the design of the in situ observing network.}
}

@article{qiu2018seasonality,
  author = {Qiu, B. and Chen, S. and Klein, P. and Wang, J. and Torres, H. and Fu, L. and Menemenlis, D.},
  title = {Seasonality in transition scale from balanced to unbalanced motions in the world ocean},
  journal = {Journal of Physical Oceanography},
  volume = {48},
  number = {3},
  pages = {591--605},
  year = {2018},
  doi = {10.1175/JPO-D-17-0169.1},
  url = {https://doi.org/10.1175/JPO-D-17-0169.1},
  tags = {Ocean Dynamics, SWOT},
  abstract = {Using high-resolution numerical simulations, we investigate the seasonal variation in the transition scale from balanced (geostrophic) to unbalanced (ageostrophic) motions in the global ocean. We find that this scale varies significantly with season and location, ranging from 30-200 km, with important implications for interpreting SWOT observations and understanding ocean dynamics across different scales.}
}

@article{su2018ocean,
  author = {Su, Z. and Wang, J. and Klein, P. and Thompson, A.F. and Menemenlis, D.},
  title = {Ocean submesoscales as a key component of the global heat budget},
  journal = {Nature Communications},
  volume = {9},
  number = {1},
  pages = {775},
  year = {2018},
  doi = {10.1038/s41467-018-02983-w},
  url = {https://doi.org/10.1038/s41467-018-02983-w},
  tags = {Heat Flux, Submesoscale},
  abstract = {Using high-resolution ocean simulations, we show that submesoscale processes (1-50 km) play a crucial role in vertical heat transport, contributing significantly to the global ocean heat budget. These processes, which include mixed layer instabilities and frontal dynamics, enhance heat flux by up to 50% in some regions, affecting climate predictions and requiring revision of parameterizations in climate models.}
}

@article{torres2018partitioning,
  author = {Torres, H.S. and Klein, P. and Menemenlis, D. and Qiu, B. and Su, Z. and Wang, J. and Chen, S. and Fu, L.},
  title = {Partitioning ocean motions into balanced motions and internal gravity waves: A modeling study in anticipation of future space missions},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {123},
  number = {11},
  pages = {8084--8105},
  year = {2018},
  doi = {10.1029/2018JC014438},
  url = {https://doi.org/10.1029/2018JC014438},
  tags = {Ocean Dynamics, SWOT},
  abstract = {We develop and test methods to partition ocean surface height signals into balanced motions (geostrophic currents and mesoscale eddies) and unbalanced motions (internal gravity waves) using high-resolution numerical models. This partitioning is essential for interpreting SWOT observations and distinguishing between different dynamical processes contributing to sea surface height variability at small scales.}
}

@article{wang2019spatial,
  author = {Wang, J. and Fu, L. and Torres, H.S. and Chen, S. and Qiu, B. and Menemenlis, D.},
  title = {On the spatial scales to be resolved by the surface water and ocean topography Ka-band radar interferometer},
  journal = {Journal of Atmospheric and Oceanic Technology},
  volume = {36},
  number = {1},
  pages = {87--99},
  year = {2019},
  doi = {10.1175/JTECH-D-18-0119.1},
  url = {https://doi.org/10.1175/JTECH-D-18-0119.1},
  tags = {SWOT, Satellite Technology},
  abstract = {We analyze the spatial scales that SWOT's Ka-band radar interferometer can effectively resolve by examining both signal and noise characteristics using numerical simulations. We find that SWOT can resolve wavelengths down to approximately 15-30 km depending on sea state and location, with implications for studying mesoscale and submesoscale ocean dynamics and planning validation activities.}
}

@article{tamsitt2017spiraling,
  author = {Tamsitt, V. and Drake, H.F. and Morrison, A.K. and Talley, L.D. and Dufour, C.O. and Gray, A.R. and Griffies, S.M. and Mazloff, M.R. and Sarmiento, J.L. and Wang, J.},
  title = {Spiraling pathways of global deep waters to the surface of the Southern Ocean},
  journal = {Nature Communications},
  volume = {8},
  number = {1},
  pages = {172},
  year = {2017},
  doi = {10.1038/s41467-017-00197-0},
  url = {https://doi.org/10.1038/s41467-017-00197-0},
  tags = {Southern Ocean, Ocean Currents},
  abstract = {Using Lagrangian analysis in ocean models, we show that deep waters follow spiraling pathways as they upwell to the surface in the Southern Ocean, taking decades to centuries. These pathways are strongly influenced by mesoscale eddies and determine where and when deep carbon and nutrients reach the surface, with major implications for understanding the ocean's role in climate and the marine carbon cycle.}
}

@article{vansebille2018lagrangian,
  author = {Van Sebille, E. and Griffies, S.M. and Abernathey, R. and Adams, T.P. and Berloff, P. and Biastoch, A. and Blanke, B. and Chassignet, E.P. and Cheng, Y. and Cotter, C.J. and Deleersnijder, E. and Doos, K. and Drake, H.F. and Drijfhout, S. and Gary, S.F. and Heemink, A.W. and Kjellsson, J. and Koszalka, I.M. and Lange, M. and Lique, C. and MacGilchrist, G.A. and Marsh, R. and Adame, C.G.M. and McAdam, R. and Nencioli, F. and Paris, C.B. and Piggott, M.D. and Polton, J.A. and Rühs, S. and Shah, S.H.A.M. and Thomas, M.D. and Wang, J. and Wolfram, P.J. and Zanna, L. and Zika, J.D.},
  title = {Lagrangian ocean analysis: Fundamentals and practices},
  journal = {Ocean Modelling},
  volume = {121},
  pages = {49--75},
  year = {2018},
  doi = {10.1016/j.ocemod.2017.11.008},
  url = {https://doi.org/10.1016/j.ocemod.2017.11.008},
  tags = {Ocean Dynamics},
  abstract = {This review provides a comprehensive overview of Lagrangian methods in oceanography, covering theoretical fundamentals, numerical implementation, and practical applications. We discuss particle tracking techniques, tools for Lagrangian analysis, and applications ranging from understanding ocean circulation and transport to studying marine ecosystems and plastic pollution. The paper serves as a guide for researchers using Lagrangian methods in ocean science.}
}

@article{morrow2019global,
  author = {Morrow, R. and Fu, L. and Ardhuin, F. and Benkiran, M. and Chapron, B. and Cosme, E. and d'Ovidio, F. and Farrar, J.T. and Gille, S.T. and Lapeyre, G. and Le Traon, P.Y. and Pascual, A. and Ponte, A. and Qiu, B. and Rascle, N. and Ubelmann, C. and Wang, J. and Zaron, E.D.},
  title = {Global observations of fine-scale ocean surface topography with the surface water and ocean topography (SWOT) mission},
  journal = {Frontiers in Marine Science},
  volume = {6},
  pages = {232},
  year = {2019},
  doi = {10.3389/fmars.2019.00232},
  url = {https://doi.org/10.3389/fmars.2019.00232},
  tags = {Satellite Altimetry, SWOT},
  abstract = {This review discusses how SWOT will revolutionize our ability to observe fine-scale ocean surface topography globally. We describe the mission's capabilities, expected products, and scientific applications including ocean circulation, mesoscale and submesoscale dynamics, internal tides, and coastal processes. SWOT will provide unprecedented two-dimensional maps of sea surface height at 15 km resolution, enabling new studies across multiple disciplines.}
}

@article{dovidio2019frontiers,
  author = {d'Ovidio, F. and Pascual, A. and Wang, J. and Doglioli, A.M. and Jing, Z. and Moreau, S. and Grégori, G. and Swart, S. and Speich, S. and Cyr, F. and Legresy, B. and Chao, Y. and Fu, L. and Morrow, R.},
  title = {Frontiers in fine-scale in situ studies: Opportunities during the SWOT fast sampling phase},
  journal = {Frontiers in Marine Science},
  volume = {6},
  pages = {168},
  year = {2019},
  doi = {10.3389/fmars.2019.00168},
  url = {https://doi.org/10.3389/fmars.2019.00168},
  tags = {Satellite Altimetry, SWOT},
  abstract = {We discuss opportunities for in situ ocean studies during SWOT's fast sampling phase when the satellite will revisit the same location every day. This unique sampling will enable studies of rapidly evolving fine-scale features including submesoscale dynamics, ocean fronts, and their impacts on biology and biogeochemistry. We propose coordinated in situ campaigns to maximize scientific return during this phase.}
}

@article{wang2019long,
  author = {Wang, J. and Fu, L.},
  title = {On the long-wavelength validation of the SWOT KaRIn measurement},
  journal = {Journal of Atmospheric and Oceanic Technology},
  volume = {36},
  number = {5},
  pages = {843--848},
  year = {2019},
  doi = {10.1175/JTECH-D-18-0148.1},
  url = {https://doi.org/10.1175/JTECH-D-18-0148.1},
  tags = {Satellite Altimetry, SWOT},
  abstract = {We discuss strategies for validating SWOT's Ka-band Radar Interferometer (KaRIn) at long wavelengths (>100 km) where traditional nadir altimetry provides adequate coverage. By comparing with Jason-class missions, we can assess KaRIn's absolute accuracy and long-wavelength errors. This validation is essential for establishing confidence in SWOT measurements before examining unique fine-scale observations.}
}

@article{zhao2019decomposition,
  author = {Zhao, Z. and Wang, J. and Menemenlis, D. and Fu, L. and Chen, S. and Qiu, B.},
  title = {Decomposition of the multimodal multidirectional M 2 internal tide field},
  journal = {Journal of Atmospheric and Oceanic Technology},
  volume = {36},
  number = {6},
  pages = {1157--1173},
  year = {2019},
  doi = {10.1175/JTECH-D-19-0022.1},
  url = {https://doi.org/10.1175/JTECH-D-19-0022.1},
  tags = {Internal Waves, Satellite Altimetry},
  abstract = {We develop methods to decompose complex internal tide fields into different modes and propagation directions using high-resolution numerical simulations. This decomposition is essential for extracting internal tide signals from satellite altimetry and understanding internal wave generation, propagation, and dissipation. The methods are applicable to both conventional and SWOT altimetry.}
}

@article{li2019observing,
  author = {Li, Z. and Wang, J. and Fu, L.},
  title = {An observing system simulation experiment for ocean state estimation to assess the performance of the SWOT mission: Part 1—A twin experiment},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {124},
  number = {7},
  pages = {4838--4855},
  year = {2019},
  doi = {10.1029/2018JC014869},
  url = {https://doi.org/10.1029/2018JC014869},
  tags = {SWOT, Mission Development},
  abstract = {Using data assimilation with a regional ocean model, we assess how SWOT observations will improve ocean state estimates compared to conventional altimetry. Twin experiments show that SWOT significantly improves representation of mesoscale and submesoscale features, reduces errors in velocity and vorticity fields, and better constrains three-dimensional ocean structure. Results demonstrate SWOT's transformative impact on operational oceanography.}
}

@article{mazloff2020importance,
  author = {Mazloff, M.R. and Cornuelle, B. and Gille, S.T. and Wang, J.},
  title = {The importance of remote forcing for regional modeling of internal waves},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {125},
  number = {2},
  pages = {e2019JC015623},
  year = {2020},
  doi = {10.1029/2019JC015623},
  url = {https://doi.org/10.1029/2019JC015623},
  tags = {Internal Waves, Ocean Dynamics},
  abstract = {We demonstrate that remote forcing of internal waves is critical for regional ocean modeling. Internal waves generated at distant topography can propagate thousands of kilometers and significantly affect regional energetics and mixing. Proper representation of these remotely forced internal waves requires careful treatment of boundary conditions in regional models, with implications for understanding observed internal wave fields.}
}

@article{qiu2020reconstructing,
  author = {Qiu, B. and Chen, S. and Klein, P. and Torres, H. and Wang, J. and Fu, L. and Menemenlis, D.},
  title = {Reconstructing upper-ocean vertical velocity field from sea surface height in the presence of unbalanced motion},
  journal = {Journal of Physical Oceanography},
  volume = {50},
  number = {1},
  pages = {55--79},
  year = {2020},
  doi = {10.1175/JPO-D-19-0172.1},
  url = {https://doi.org/10.1175/JPO-D-19-0172.1},
  tags = {Reconstruction, Ocean Dynamics},
  abstract = {We develop methods to reconstruct upper-ocean vertical velocity from sea surface height observations when both balanced (geostrophic) and unbalanced (ageostrophic) motions are present. Using high-resolution simulations, we show that vertical velocities can be recovered at scales down to 50-100 km despite the presence of internal waves and other unbalanced motions, with important applications for interpreting SWOT observations.}
}

@article{su2020high,
  author = {Su, Z. and Torres, H. and Klein, P. and Thompson, A.F. and Siegelman, L. and Wang, J. and Menemenlis, D. and Hill, C.},
  title = {High‐frequency submesoscale motions enhance the upward vertical heat transport in the global ocean},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {125},
  number = {9},
  pages = {e2020JC016544},
  year = {2020},
  doi = {10.1029/2020JC016544},
  url = {https://doi.org/10.1029/2020JC016544},
  tags = {Ocean Dynamics, Heat Flux},
  abstract = {Using high-resolution global ocean simulations, we show that high-frequency submesoscale motions with periods less than a few days significantly enhance upward vertical heat transport. These motions contribute 30-50% of the total submesoscale heat flux in energetic regions, highlighting the importance of temporal resolution in observations and models for accurately representing ocean heat budgets and their climate impacts.}
}

@article{archer2022reconstructing,
  author = {Archer, M.R. and Li, Z. and Wang, J. and Fu, L.},
  title = {Reconstructing fine‐scale ocean variability via data assimilation of the SWOT pre‐launch in situ observing system},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {127},
  number = {2},
  pages = {e2021JC017362},
  year = {2022},
  doi = {10.1029/2021JC017362},
  url = {https://doi.org/10.1029/2021JC017362},
  tags = {Satellite Altimetry, Reconstruction},
  abstract = {We demonstrate that assimilating data from the SWOT pre-launch in situ observing system into a regional ocean model significantly improves representation of fine-scale ocean variability. The sparse in situ network, when properly assimilated, can reconstruct submesoscale features and improve ocean state estimates. This study validates the observing system design and shows the complementary value of in situ observations for SWOT mission success.}
}

@article{li2021formulation,
  author = {Li, Z. and Archer, M. and Wang, J. and Fu, L.},
  title = {Formulation and demonstration of an extended-3DVAR multi-scale data assimilation system for the SWOT altimetry era},
  journal = {Ocean Science Discussions},
  pages = {1--26},
  year = {2021},
  doi = {10.5194/os-2021-107},
  url = {https://doi.org/10.5194/os-2021-107},
  tags = {Satellite Altimetry, Data Assimilation, SWOT},
  abstract = {We develop an extended 3D variational data assimilation system designed to optimally utilize SWOT's high-resolution two-dimensional altimetry measurements. The system accounts for multi-scale dynamics and anisotropic error correlations, enabling effective assimilation of SWOT data. Tests show significant improvements in representing mesoscale and submesoscale ocean features compared to conventional assimilation approaches.}
}

@article{wang2022development,
  author = {Wang, J. and Fu, L. and Haines, B. and Lankhorst, M. and Lucas, A.J. and Farrar, J.T. and Send, U. and Meinig, C. and Schofield, O. and Ray, R.},
  title = {On the development of SWOT in situ calibration/validation for short-wavelength ocean topography},
  journal = {Journal of Atmospheric and Oceanic Technology},
  volume = {39},
  number = {5},
  pages = {595--617},
  year = {2022},
  doi = {10.1175/JTECH-D-21-0039.1},
  url = {https://doi.org/10.1175/JTECH-D-21-0039.1},
  tags = {SWOT, Mission Development},
  abstract = {This comprehensive paper describes the development of in situ calibration and validation strategies for SWOT, focusing on short-wavelength ocean topography (15-100 km). We discuss the design of the global in situ observing network, measurement requirements, data processing approaches, and validation metrics. The Cal/Val plan addresses both absolute accuracy assessment and relative precision validation of SWOT's unprecedented fine-scale measurements.}
}

@article{sun2022review,
  author = {Sun, Z. and Sandoval, L. and Crystal-Ornelas, R. and Mousavi, S.M. and Wang, J. and Lin, C. and Cristea, N. and Tong, D. and Carande, W.H. and Ma, X.},
  title = {A review of earth artificial intelligence},
  journal = {Computers \& Geosciences},
  volume = {159},
  pages = {105034},
  year = {2022},
  doi = {10.1016/j.cageo.2021.105034},
  url = {https://doi.org/10.1016/j.cageo.2021.105034},
  tags = {Machine Learning},
  abstract = {This review examines the application of artificial intelligence and machine learning methods to Earth science problems. We discuss deep learning architectures, training strategies, and applications across atmospheric science, oceanography, hydrology, and solid earth geophysics. The review highlights opportunities and challenges for AI in processing large Earth observation datasets, making predictions, and discovering new patterns in complex Earth system data.}
}

@article{torres2022separating,
  author = {Torres, H.S. and Klein, P. and D'Asaro, E. and Wang, J. and Thompson, A.F. and Siegelman, L. and Menemenlis, D. and Rodriguez, E. and Wineteer, A. and Perkovic‐Martin, D.},
  title = {Separating energetic internal gravity waves and small‐scale frontal dynamics},
  journal = {Geophysical Research Letters},
  volume = {49},
  number = {6},
  pages = {e2021GL096249},
  year = {2022},
  doi = {10.1029/2021GL096249},
  url = {https://doi.org/10.1029/2021GL096249},
  tags = {Internal Waves, Ocean Dynamics, Submesoscale},
  abstract = {We develop methods to separate internal gravity wave signals from balanced submesoscale frontal dynamics in high-resolution ocean observations and models. Using combined analysis of sea surface height and velocity, we show that these distinct dynamical regimes can be effectively distinguished. This separation is crucial for interpreting SWOT observations and understanding the relative contributions of different processes to ocean variability.}
}

@article{torres2022wind,
  author = {Torres, H.S. and Klein, P. and Wang, J. and Wineteer, A. and Qiu, B. and Thompson, A.F. and Rodriguez, E. and Menemenlis, D. and Molod, A. and Hill, C.N. and Strobach, E. and Zhang, H. and Flexas, M. and Perkovic-Martin, D.},
  title = {Wind work at the air-sea interface: A Modeling Study in Anticipation of Future Space Missions},
  journal = {EGUsphere},
  pages = {1--26},
  year = {2022},
  doi = {10.5194/egusphere-2022-381},
  url = {https://doi.org/10.5194/egusphere-2022-381},
  tags = {Mission Development, Air-Sea Interaction},
  abstract = {Using coupled ocean-atmosphere simulations, we investigate wind work at the air-sea interface and assess how future satellite missions measuring both winds and currents could improve our understanding of this critical energy exchange. We show that resolving small-scale ocean currents is essential for accurately calculating wind work, with implications for understanding ocean energetics and designing future observing systems like ODYSEA.}
}

@article{wang2023increasing,
  author = {Wang, J. and Torres, H. and Klein, P. and Wineteer, A. and Zhang, H. and Menemenlis, D. and Ubelmann, C. and Rodriguez, E.},
  title = {Increasing the observability of near inertial oscillations by a future ODYSEA satellite mission},
  journal = {Remote Sensing},
  volume = {15},
  number = {18},
  pages = {4526},
  year = {2023},
  doi = {10.3390/rs15184526},
  url = {https://doi.org/10.3390/rs15184526},
  tags = {Mission Development},
  abstract = {We demonstrate that a future ODYSEA satellite mission with Doppler capabilities would significantly enhance our ability to observe near-inertial oscillations (NIOs), which are important for ocean mixing and energy dissipation. Using numerical simulations, we show that Doppler measurements can effectively separate NIOs from balanced geostrophic flows, providing unprecedented observations of this key component of ocean dynamics and enabling improved quantification of wind-driven energy input to the ocean.}
}

@article{goh2023maesstro,
  author = {Goh, E. and Yepremyan, A.R. and Wang, J. and Wilson, B.},
  title = {MAESSTRO: Masked Autoencoders for Sea Surface Temperature Reconstruction under Occlusion},
  journal = {EGUsphere},
  pages = {1--20},
  year = {2023},
  doi = {10.5194/egusphere-2023-1779},
  url = {https://doi.org/10.5194/egusphere-2023-1779},
  tags = {Sea Surface Temperature, Machine Learning},
  abstract = {We develop MAESSTRO, a masked autoencoder approach for reconstructing sea surface temperature fields from partially observed satellite data. The deep learning model is trained to infer missing data due to cloud cover by learning spatial and temporal patterns in SST. Results show significant improvements over traditional interpolation methods, with applications for creating gap-free SST products and studying ocean dynamics in cloudy regions.}
}

@article{yu2022observed,
  author = {Yu, X. and Naveira Garabato, A.C. and Vic, C. and Gula, J. and Savage, A.C. and Wang, J. and Waterhouse, A.F. and MacKinnon, J.A.},
  title = {Observed equatorward propagation and chimney effect of near‐inertial waves in the midlatitude ocean},
  journal = {Geophysical Research Letters},
  volume = {49},
  number = {13},
  pages = {e2022GL098522},
  year = {2022},
  doi = {10.1029/2022GL098522},
  url = {https://doi.org/10.1029/2022GL098522},
  tags = {Waves, GFD},
  abstract = {Using observations from moorings and profiling floats, we document the equatorward propagation of near-inertial waves in the midlatitude ocean and identify a chimney effect where waves propagate vertically and laterally. This mechanism is important for transporting energy from the mixed layer to the ocean interior where it contributes to mixing. The findings have implications for understanding the energy pathway from winds to ocean mixing.}
}

@inproceedings{mostafa2023cnn,
  author = {Mostafa, S.A.M. and Wang, J. and Holt, B. and Purushotham, S. and Wang, J.},
  title = {CNN based ocean eddy detection using cloud services},
  booktitle = {IGARSS 2023-2023 IEEE International Geoscience and Remote Sensing Symposium},
  pages = {4052--4055},
  year = {2023},
  doi = {10.1109/IGARSS52108.2023.10282653},
  url = {https://doi.org/10.1109/IGARSS52108.2023.10282653},
  tags = {Machine Learning, Submesoscale},
  abstract = {We develop a convolutional neural network approach for automated detection of ocean eddies from satellite altimetry using cloud computing services. The CNN is trained on labeled eddy datasets and achieves high accuracy in identifying and tracking mesoscale eddies. The cloud-based implementation enables processing of large satellite datasets, with applications for operational oceanography and climate studies.}
}

@article{torres2023anticipated,
  author = {Torres, H. and Wineteer, A. and Klein, P. and Lee, T. and Wang, J. and Rodriguez, E. and Menemenlis, D. and Zhang, H.},
  title = {Anticipated capabilities of the ODYSEA wind and current mission concept to estimate wind work at the air–sea interface},
  journal = {Remote Sensing},
  volume = {15},
  number = {13},
  pages = {3337},
  year = {2023},
  doi = {10.3390/rs15133337},
  url = {https://doi.org/10.3390/rs15133337},
  tags = {Mission Development, Air-Sea Interaction},
  abstract = {We assess the anticipated capabilities of the ODYSEA mission concept to measure wind work at the air-sea interface by simultaneously observing winds and ocean surface currents. Using numerical simulations, we show that ODYSEA could provide unprecedented measurements of the energy transfer from atmosphere to ocean, resolving spatial scales critical for understanding ocean energetics. These observations would transform our understanding of air-sea coupling and improve climate models.}
}

@article{demarez2023observational,
  author = {de Marez, C. and Callies, J. and Haines, B. and Rodriguez-Chavez, D. and Wang, J.},
  title = {Observational constraints on the submesoscale sea surface height variance of balanced motion},
  journal = {Journal of Physical Oceanography},
  volume = {53},
  number = {5},
  pages = {1221--1235},
  year = {2023},
  doi = {10.1175/JPO-D-22-0129.1},
  url = {https://doi.org/10.1175/JPO-D-22-0129.1},
  tags = {Ocean Dynamics, Satellite Altimetry, In-situ},
  abstract = {Using in situ observations and SWOT data, we constrain the sea surface height variance due to balanced submesoscale motions. By combining measurements with theoretical scaling, we estimate that balanced submesoscales contribute 10-30% of the total sea surface height variance at wavelengths of 15-100 km. These observational constraints are essential for validating models and understanding the relative importance of different dynamical processes at small scales.}
}

@article{yu2024accuracy,
  author = {Yu, Y. and Sandwell, D.T. and Dibarboure, G. and Chen, C. and Wang, J.},
  title = {Accuracy and resolution of SWOT altimetry: Foundation seamounts},
  journal = {Earth and Space Science},
  volume = {11},
  number = {6},
  pages = {e2024EA003581},
  year = {2024},
  doi = {10.1029/2024EA003581},
  url = {https://doi.org/10.1029/2024EA003581},
  tags = {Satellite Altimetry, SWOT},
  abstract = {We assess SWOT's accuracy and resolution using observations over foundation seamounts, which provide stable gravity-derived sea surface height references. Analysis shows SWOT achieves height accuracy of 2-3 cm and resolves features down to 15-20 km wavelength, confirming mission requirements. Foundation seamounts serve as natural calibration targets, providing ongoing assessment of SWOT performance throughout the mission.}
}

@article{qiu2024seasonal,
  author = {Qiu, B. and Chen, S. and Wang, J. and Fu, L.},
  title = {Seasonal and fortnight variations in internal solitary waves in the Indonesian seas from the SWOT measurements},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {129},
  number = {7},
  pages = {e2024JC021086},
  year = {2024},
  doi = {10.1029/2024JC021086},
  url = {https://doi.org/10.1029/2024JC021086},
  tags = {Internal Waves, Satellite Altimetry, SWOT},
  abstract = {Using SWOT altimetry, we observe seasonal and fortnightly variations in internal solitary waves in the Indonesian seas. SWOT's two-dimensional mapping capability reveals the complex spatial structure of these waves and their modulation by tides, stratification, and monsoon forcing. Results show that internal waves are most energetic during spring tides and certain monsoon phases, with implications for mixing, energy dissipation, and submarine navigation in this complex region.}
}

@inproceedings{fu2024breakthrough,
  author = {Fu, L. and Morrow, R. and Farrar, J.T. and Wang, J.},
  title = {A breakthrough of radar remote sensing of the ocean: the Surface Water and Ocean Topography (SWOT) Mission},
  booktitle = {EGU General Assembly Conference Abstracts},
  pages = {12599},
  year = {2024},
  url = {https://meetingorganizer.copernicus.org/EGU24/EGU24-12599.html},
  tags = {Satellite Altimetry, SWOT},
  abstract = {This presentation reviews the breakthrough capabilities of SWOT for ocean remote sensing, highlighting early results from the mission. SWOT's wide-swath Ka-band radar interferometry provides two-dimensional maps of sea surface height at unprecedented resolution, revealing mesoscale and submesoscale ocean features globally. We discuss key scientific findings, mission performance, and the transformative impact of SWOT on physical oceanography, coastal studies, and operational applications.}
}
